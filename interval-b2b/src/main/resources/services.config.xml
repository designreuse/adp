<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <import resource="dao.config.xml"/>

    <bean id="categoryService" class="com.interval.service.impl.CategoryService" autowire="constructor"/>
    <bean id="centerService" class="com.interval.service.impl.CenterService" autowire="constructor"/>
    <bean id="orderStatusService" class="com.interval.service.impl.OrderStatusService" autowire="constructor" />
    <bean id="orderDetailsService" class="com.interval.service.impl.OrderDetailsService" autowire="constructor" />
    <bean id="inventoryService" class="com.interval.service.impl.InventoryService" autowire="constructor"/>
    <bean id="productService" class="com.interval.service.impl.ProductService" autowire="constructor"/>

</beans>