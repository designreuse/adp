<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.interval.dao.models.Inventory" table="INVENTORY" schema="PUBLIC" catalog="PUBLIC">
        <id name="id">
            <column name="ID" sql-type="integer" not-null="true"/>
        </id>
        <property name="productId">
            <column name="PRODUCT_ID" sql-type="integer" not-null="true"/>
        </property>
        <property name="availableQuantity">
            <column name="AVAILABLE_QUANTITY" sql-type="integer"/>
        </property>
        <property name="safetyStock">
            <column name="SAFETY_STOCK" sql-type="integer"/>
        </property>
        <property name="availability">
            <column name="AVAILABILITY" sql-type="boolean"/>
        </property>
        <many-to-one name="productByProductId" class="com.interval.dao.models.Product" insert="false" update="false">
            <column name="PRODUCT_ID" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>