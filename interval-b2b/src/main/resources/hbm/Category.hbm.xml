<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.interval.dao.models.Category" table="CATEGORY" schema="PUBLIC" catalog="PUBLIC">
        <id name="id">
            <column name="ID" sql-type="integer" not-null="true"/>
        </id>
        <property name="name">
            <column name="NAME" sql-type="character" length="18"/>
        </property>
        <property name="description">
            <column name="DESCRIPTION" sql-type="character" length="18"/>
        </property>
        <set name="productsById" inverse="true">
            <key>
                <column name="CATEGORY_ID" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.interval.dao.models.Product"/>
        </set>
    </class>
</hibernate-mapping>